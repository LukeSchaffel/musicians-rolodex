<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/contacts/new.css">
<%- include('../partials/nav') %>


<main>
  <form action="/instruments" method="POST" autocomplete="off" >
    <div class="mb-3">
      <label class="form-label">Instrument:
        <input type="text" name="name" class="form-control">
      </label>
  </div>
  <br>
    <button type="submit" class="btn btn-primary">Add New Instrument</button>
  </form>

  <% instruments.forEach(instrument => { %>
   
  
  <div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"> <%= instrument.name %></li>
      <% if (instrument.creator.equals(user?.profile._id)) { %>
        <form action="/instruments/<%= instrument._id %>?_method=DELETE" method="POST" ><button type="submit" class="btn btn-danger">X</button></form> 
       
      <% } %>
    </ul>
  </div>
  <% }) %>

</main>

<%- include('../partials/footer') %>